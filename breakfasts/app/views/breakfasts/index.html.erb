<div class="page-header">
<h1>Listing breakfasts <small>yum...</small></h1>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Date Tried</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breakfasts.each do |breakfast| %>
      <tr>
        <td><%= breakfast.name %></td>
        <td><%= breakfast.description %></td>
        <td><%= image_tag breakfast.image_url, class: "thumb" %></td>
        <td><%= breakfast.date_tried %></td>
        <td><%= link_to 'Show', breakfast %></td>
        <td><%= link_to 'Edit', edit_breakfast_path(breakfast) %></td>
        <td><%= link_to 'Destroy', breakfast, class: 'btn btn-primary', method: :delete, data: { confirm: 'STAHP. Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Breakfast', new_breakfast_path %>
